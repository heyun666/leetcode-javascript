{
    "name": "leetcode-javascript",
    "version": "1.0.0",
    "description": "LeetCode with JavaScript",
    "main": "index.js",
    "repository": "https://github.com/tjx666/leetcode-javascript",
    "author": "YuTengjing",
    "license": "MIT",
    "private": true,
    "scripts": {
        "test": "mocha",
        "coverage": "nyc --reporter=lcov yarn test && codecov",
        "test-report": "mocha --reporter mochawesome",
        "lint": "eslint -c .eslintrc.js --ext .js ./{src,test}/**/*.js",
        "clean": "rimraf -rf ./.nyc_output ./coverage ./mochawesome-report"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint -c .eslintrc.js"
        ],
        "*.{js,jsx,ts,tsx,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "codecov": "^3.6.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.0.5",
        "intelli-espower-loader": "^1.0.1",
        "lint-staged": "^9.5.0",
        "mocha": "^7.0.0",
        "mochawesome": "^4.1.0",
        "nyc": "^15.0.0",
        "power-assert": "^1.6.1",
        "prettier": "^1.19.1"
    }
}
